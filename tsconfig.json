{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "strict": false,
    "types": ["node"],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}

